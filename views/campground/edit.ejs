<!-- views/campgrounds/edit.ejs -->
<% layout('layouts/boilerplate') %>
    <!-- views/campgrounds/new.ejs -->
    <% layout('layouts/boilerplate') %>
        <div class="row">
            <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/edit/<%= camp._id %>?_method=PATCH" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="Campground[title]"
                            value="<%= camp.title %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="Campground[location]"
                            value="<%= camp.location %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="images">Image Url</label>
                        <input class="form-control" type="text" id="images" name="Campground[images]"
                            value="<%= camp.images %>" required></input>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price">Rp.</span>
                            <input type="number" class="form-control" id="price" name="Campground[price]"
                                placeholder="0.00" aria-label="price" aria-describedby="price-label"
                                value="<%= camp.price %>">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" id="description" name="Campground[description]"
                            required><%= camp.description %></textarea>
                    </div>
                    <button class="btn btn-info mb-3">Update Campground</button>
                </form>
                <a href="/campgroundDetail/<%= camp._id %>">Back Campground</a>
            </div>
        </div>




        </form>