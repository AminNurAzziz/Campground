<% layout('layouts/boilerplate') %>
    <h1>All Campground</h1>
    <div>
        <a href="/new'">Add Campground</a>
    </div>
    <% for (r of resultCamp) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= r.images %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= r.title %>
                        </h5>
                        <p class="card-text">
                            <%=r.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=r.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgroundDetail/<%= r._id %>">View <%= r.title %></a>
                    </div>
                </div>
            </div>

        </div>

        <% } %>